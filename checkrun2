def findTool():
  return pygetwindow.getWindowsWithTitle('run')


print('Tool Running.....')

    
def fully():
    while True:
        sleep(120)
        if findTool():
            print('Tool is running....')
        elif not findTool(): 
            print("not detected tool running")
            # open tool 
            os.system('start.bat')
            
fully()
